<%- include('partials/header.ejs')%>

<body>
  <%- include('partials/navbar.ejs')%>
  <%- include('partials/head.ejs')%>

  <!-- Page Header-->
  <h1>G2 Page Form</h1>

  <form action="/g2" method="POST">
    <div class="section" id="personal-info">
      <h2>Personal Information</h2>
      <div class="form-group">
        <label for="first-name">First Name</label>
        <input type="text" id="first-name" name="firstname" required>
      </div>
      <div class="form-group">
        <label for="last-name">Last Name</label>
        <input type="text" id="last-name" name="lastname" required>
      </div>
      <!-- <div class="form-group">
        <label for="age">Age</label>
        <input type="number" id="age" name="age" required>
      </div> -->
    </div>

    <div class="section" id="car-info">
      <h2>Car Information</h2>
      <div class="form-group">
        <label for="license-number">License Number</label>
        <input type="text" id="license-number" name="license_number" maxlength="8" required>
      </div>
      <div class="form-group">
        <label for="make">Make</label>
        <input type="text" id="make" name="make" required>
      </div>
      <div class="form-group">
        <label for="model">Model</label>
        <input type="text" id="model" name="model" required>
      </div>
      <div class="form-group">
        <label for="year">Year</label>
        <input type="number" id="year" name="year" required>
      </div>
      <div class="form-group">
        <label for="plate-number">Plate Number</label>
        <input type="text" id="plate-number" name="plate_number" required>
      </div>
    </div>

    <button id="submit-btn" type="submit">Submit</button>
  </form>

  <% if (message) { %>
    <p><%= message %></p>
  <% } %>

  <%- include('partials/footer.ejs')%>
</body>
</html>
